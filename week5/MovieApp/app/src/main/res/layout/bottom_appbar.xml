<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#202125"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <FrameLayout
            android:id="@+id/home_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/home_tv"
            app:layout_constraintVertical_chainStyle="packed"
            >
            <ImageView
                android:id="@+id/home_btn_on_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_btn_on"/>
            <ImageView
                android:id="@+id/home_btn_off_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_btn_off"/>
        </FrameLayout>
        <TextView
            android:id="@+id/home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_frame"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#84858a"
            android:paddingTop="3dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <FrameLayout
            android:id="@+id/watchlist_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/watchlist_tv"
            app:layout_constraintVertical_chainStyle="packed"
            >
            <ImageView
                android:id="@+id/watchlist_btn_on_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/watchlist_btn_on"/>
            <ImageView
                android:id="@+id/watchlist_btn_off_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/watchlist_btn_off"/>
        </FrameLayout>
        <TextView
            android:id="@+id/watchlist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심 목록"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/watchlist_frame"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#84858a"
            android:paddingTop="3dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>